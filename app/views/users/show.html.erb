<% provide(:title, @user.name) %>

<h1>アカウント情報</h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered table-condensed" id="user-table">
      <thead>
        <tr>
          <th>名前</th>
          <th>メールアドレス</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @user.name %></td>
          <td><%= @user.email %></td>
        </tr>
      </tbody>
    </table>
    <div class="to-user-edit">
      <%= link_to "アカウント情報を編集する", edit_user_path(@user), class: "btn btn-md btn-primary" %>
    </div>
  </div>
</div>