<% provide(:title, "Edit") %>
<% provide(:class_text, "user--edit") %>

<div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <h1>ユーザー情報更新</h1>
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages', object: @user %>
    
      <%= f.label :name, class: "label-user-edit" %>
      <%= f.text_field :name, class: "form-control" %>
    
      <%= f.label :email, class: "label-user-edit" %>
      <%= f.email_field :email, class: "form-control" %>
      
      <%= f.label :"秘密の質問 ※パスワード再発行時に必須", class: "label-user-edit" %>
      <%= f.select :question, $questions, {}, class: "form-control" %>
      
      <%= f.label :"回答 ※パスワード再発行時に必須", class: "label-user-edit" %>
      <%= f.text_field :answer, placeholder: "20文字以内、スペースなし", class: "form-control" %>
    
      <%= f.label :password, class: "label-user-edit" %>
      <%= f.password_field :password, class: "form-control" %>
    
      <%= f.label :password_confirmation, class: "label-user-edit" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    
      <div class="user-edit-submit">
        <%= f.submit "更新", class: "btn btn-md btn-primary" %>
        <%= link_to :back do %>
          <button class="btn btn-md btn-default">戻る</button>
        <% end %>
      </div>
    <% end %>
  </div>
</div>