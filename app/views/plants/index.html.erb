<% provide(:title, "All Plants") %>

<h1><%= "#{@user.name}様の契約工場一覧" %></h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= will_paginate %>
    <table class="table table-bordered table-condensed table-hover" id="user-plants-table">
      <thead>
        <tr>
          <th>工場名</th>
          <th colspan=2><%= link_to "新規工場登録", new_user_plant_path(@user), class: "btn btn-md btn-primary" %></th>
        </tr>
      </thead>
      <tbody>
        <% @plants.each do |plant| %>
          <tr>
            <td><%= plant.name %></td>
            <td><%= link_to "詳細", user_plant_path(@user, plant), class: "btn btn-sm btn-primary" %></td>
            <td>
              <%= link_to "削除", user_plant_path(@user, plant), method: :delete,
                  class: "btn btn-sm btn-primary", data: { confirm: "#{plant.name}を削除してよろしいですか？" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate %>
  </div>
</div>