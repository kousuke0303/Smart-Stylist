<% provide(:title, "New Plant") %>
<% provide(:class_text, "new-plant") %>
<% provide(:button_text, "新規登録") %>
<% provide(:url, user_plants_path(@user)) %>

<h1>新規工場登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
  </div>
  <div>
    <p>郵便番号: <%= @zipcode %></p>
    <p>都道府県: <%= @address1 %></p>
    <p>市区町村: <%= @address2 %></p>
    <p>町名: <%= @address3 %></p>
    <p>
    <!-- リクエストパラメタを表示-->
    リクエストパラメタ: <%= @query%>
    </p>
    <!-- 生のjsonを表示-->
    result: <%= @result%>
    </p>
    <p>
      <!-- エラーメッセージを表示-->
    message: <%= @message%>
    </p>
  </div>
</div>