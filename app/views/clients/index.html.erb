<% provide(:title, "All Clients") %>

<h1><%= "#{@user.name}様の顧客情報一覧" %></h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= will_paginate %>
    <table class="table table-bordered table-condensed table-hover" id="user-clients-table">
      <thead>
        <tr>
          <th>顧客名</th>
          <th>電話番号(1)</th>
          <th colspan=2><%= link_to "新規顧客登録", new_user_client_path(@user), class: "btn btn-md btn-primary" %></th>
        </tr>
      </thead>
      <tbody>
        <% @clients.each do |client| %>
          <tr>
            <td><%= client.name %></td>
            <td><%= client.tel_1 %></td>
            <td><%= link_to "詳細", user_client_path(@user, client), class: "btn btn-sm btn-primary" %></td>
            <td>
              <%= link_to "削除", user_client_path(@user, client), method: :delete,
                  class: "btn btn-sm btn-primary", data: { confirm: "#{client.name}を削除してよろしいですか？" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate %>
  </div>
</div>