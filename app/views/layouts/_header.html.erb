<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    
    <!--スマホ用メニュー-->
    <% if logged_in? %>
      <div class="sp-menu hidden">
        <div class="top-space"></div>
        <div role="button" class="hamburger-menu">
          <span class="line-1"></span>
          <span class="line-2"></span>
          <span class="line-3"></span>
        </div>
        <div class="menu-logo">menu</div>
      </div>
    <% end %>
    
    <div class="logo">
    <%= link_to "Smart Stylist", root_path, id: "logo" %>
    </div>
    <div>
      <nav>
        <ul class="nav navbar-nav navbar-right pc-menu">
          <% if logged_in? %>
            <% if current_user.admin? %>
              <li><%= link_to "ユーザー一覧", users_path %></li>
            <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                メニュー <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "アカウント", current_user %></li>
                <li class="divider"></li>
                <li><%= link_to "利用規約", terms_of_service_path %></li>
                <li class="divider"></li>
                <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
              </ul>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>

<script>
$('.hamburger-menu').on('click', function() {
  var menu = $(this)
  var target = $('.sp-sidebar')
  var status = target.css('display')
  if( status === 'none') {
    menu.children('.line-1').css('transform','translateY(18px) rotate(-45deg)');
    menu.children('.line-2').css('opacity','0');
    menu.children('.line-3').css('transform','translateY(-18px) rotate(45deg)');
    target.css('display', 'block');
  } else {
    menu.children('.line-1').css('transform','');
    menu.children('.line-2').css('opacity','');
    menu.children('.line-3').css('transform','');
    target.css('display', 'none');
  }
});
</script>