<% provide(:title, "Traded Orders") %>

<h1>取引済オーダー一覧</h1>
<h1>
  <%= link_to "＜", users_orders_traded_path(@user, date: @first_day.prev_month), class: "btn btn-lg btn-primary" %>
  <%= @first_day.strftime("%Y年%m月") %>
  <%= link_to "＞", users_orders_traded_path(@user, date: @first_day.next_month), class: "btn btn-lg btn-primary" %>
</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= will_paginate %>
    <table class="table table-bordered table-condensed table-hover" id="traded-orders-table">
      <thead>
        <tr>
          <th width=5%></th>
          <th>顧客名</th>
          <th>売上日</th>
          <th>受注日</th>
          <th>上代</th>
          <th>費用合計</th>
          <th>粗利</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to "詳細", user_order_path(@user, order), class: "btn btn-sm btn-primary" %></td>
            <td><%= client_name(order) %></td>
            <td><%= l(order.sales_date, format: :long) %></td>
            <td><%= l(order.order_date, format: :long) %></td>
            <td><%= order.retail %>円</td>
            <td><%= put_price_or_bar(total_cost(order)) %></td>
            <td><%= put_price_or_bar(gross_profit(order)) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate %>
    
    <table class="table table-bordered table-condensed" id="traded-total-table">
      <tr>
          <th>オーダー件数</th>
          <th>上代合計</th>
          <th>費用合計</th>
          <th>粗利合計</th>
        </tr>
        <tr>
          <td><%= @orders.count %>件</td>
          <td><%= put_total_price_or_bar(@total_retail) %></td>
          <td><%= put_total_price_or_bar(@all_cost) %></td>
          <td><%= put_total_price_or_bar(@total_gross_profit) %></td>
        </tr>
    </table>
  </div>
</div>